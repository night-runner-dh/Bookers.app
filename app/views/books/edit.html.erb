<h1>Editing Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のerrorが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>
  
  <div class="field">
    <div class="Tile">Ttile</div>
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <div class="Body">Body</div>
    <%= f.text_area :body %>
  </div>
  
  <div>
    <%= f.submit 'Update Book' %>
  </div>
  
  <div>
    <span class="book-show"><%=link_to "show", book_path(@book.id) %></span>
    <span> | </span>
    <span class="book-show"><%=link_to "back", "/books" %></span>
  </div>
  
<% end %>
  